<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/separator"
        android:layout_width="@dimen/dp_0"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDish"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:textFontWeight="700"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toEndOf="@id/ivDish"
        app:layout_constraintTop_toBottomOf="@id/separator"
        tools:text="Ветчина и грибы " />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_16"
        android:textColor="@color/metallicSilver"
        android:textFontWeight="400"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toEndOf="@id/ivDish"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        tools:text="Ветчина,шампиньоны, увеличинная порция моцареллы, томатный соус" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_red_stroke"
        android:paddingHorizontal="@dimen/sp_18"
        android:paddingVertical="@dimen/dp_8"
        android:textColor="@color/indian_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="от 345 р" />
</androidx.constraintlayout.widget.ConstraintLayout>